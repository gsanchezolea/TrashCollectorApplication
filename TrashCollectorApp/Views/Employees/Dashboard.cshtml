@model IEnumerable<TrashCollectorApp.Models.PickUp>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dashboard</h1>
<div class="col-lg-12">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Employee Name
                </th>               
                <th>
                    Work Area 
                </th>  
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Employees)
            {
                <tr>
                    <td>
                        @item.FullName
                    </td>                    
                    <td>
                        @item.ZipCode
                    </td>                   
                </tr>
            }
        </tbody>
    </table>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Choice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Customer.FirstName, "Index", "Customers", new { id = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Choice.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmed)
            </td>
            <td>
                <a asp-action="Confirm" asp-controller="PickUps" asp-route-id="@item.Id">Confirm</a> 
              
            </td>
        </tr>
}
    </tbody>
</table>
